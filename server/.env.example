# ===========================================
# ARG Tour & Travel Finance API Configuration
# ===========================================
# Copy this file to .env and update as needed

# Server Configuration
PORT=3001
NODE_ENV=development

# ===========================================
# Database - PostgreSQL
# ===========================================
# Default credentials for Docker Compose development database
# For production, use secure credentials!
DATABASE_URL=postgresql://postgres:@localhost:5432/arg_finance

# ===========================================
# Better Auth Configuration
# ===========================================
# IMPORTANT: Change this secret in production!
BETTER_AUTH_SECRET=dev-secret-change-in-production-use-openssl-rand-base64-32
BETTER_AUTH_URL=http://localhost:3001

# ===========================================
# Frontend URL (for CORS)
# ===========================================
FRONTEND_URL=http://localhost:5173

# ===========================================
# Optional: Session Configuration
# ===========================================
 SESSION_EXPIRES_IN=604800  # 7 days in seconds
 SESSION_UPDATE_AGE=86400   # 1 day in seconds
